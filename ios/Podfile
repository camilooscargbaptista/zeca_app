# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= [
        '$(inherited)',
        'PERMISSION_CAMERA=1',
        'PERMISSION_MICROPHONE=1',
        'PERMISSION_PHOTOS=1',
      ]
      # Fix para Firebase modular headers
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      config.build_settings['DEFINES_MODULE'] = 'YES'
    end
  end
  
  # Aplicar também ao projeto Runner
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
  end
  
  # Fix para firebase_messaging: substituir import não-modular
  firebase_messaging_plugin_path = File.join(installer.sandbox.root, 'Headers/Public/firebase_messaging/FLTFirebaseMessagingPlugin.h')
  if File.exist?(firebase_messaging_plugin_path)
    text = File.read(firebase_messaging_plugin_path)
    new_contents = text.gsub('#import <Firebase/Firebase.h>', "#import <FirebaseCore/FirebaseCore.h>\n#import <FirebaseMessaging/FirebaseMessaging.h>")
    File.open(firebase_messaging_plugin_path, "w") { |file| file.puts new_contents }
    puts "✅ Corrigido FLTFirebaseMessagingPlugin.h"
  end
  
  # Também corrigir no cache do pub
  pub_cache_path = File.expand_path('~/.pub-cache/hosted/pub.dev/firebase_messaging-14.7.10/ios/Classes/FLTFirebaseMessagingPlugin.h')
  if File.exist?(pub_cache_path)
    text = File.read(pub_cache_path)
    # Verificar se já foi corrigido
    unless text.include?('FirebaseCore/FirebaseCore.h')
      new_contents = text.gsub('#import <Firebase/Firebase.h>', "#import <FirebaseCore/FirebaseCore.h>\n#import <FirebaseMessaging/FirebaseMessaging.h>")
      File.open(pub_cache_path, "w") { |file| file.puts new_contents }
      puts "✅ Corrigido FLTFirebaseMessagingPlugin.h no pub cache"
    end
    # Se já tem FirebaseCore mas não tem FirebaseMessaging, adicionar
    if text.include?('FirebaseCore/FirebaseCore.h') && !text.include?('FirebaseMessaging/FirebaseMessaging.h')
      new_contents = text.gsub('#import <FirebaseCore/FirebaseCore.h>', "#import <FirebaseCore/FirebaseCore.h>\n#import <FirebaseMessaging/FirebaseMessaging.h>")
      File.open(pub_cache_path, "w") { |file| file.puts new_contents }
      puts "✅ Adicionado FirebaseMessaging import no pub cache"
    end
  end
end
